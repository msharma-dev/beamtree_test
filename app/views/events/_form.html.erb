<div class="row">
<div class="col-md-4">
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :first_name, :class=>'form-label' %>
    <%= form.text_field :first_name, :class=>'form-control',:required => true %>
  </div>

  <div class="field">
    <%= form.label :last_name, :class=>'form-label' %>
    <%= form.text_field :last_name, :class=>'form-control',:required => true %>
  </div>

  <div class="field">
    <%= form.label :dob, :class=>'form-label' %>
    <%= form.date_field :dob, :class=>'form-control',:required => true %>
  </div>

  <div class="field">
    <%= form.label :event_name, :class=>'form-label' %>
    <%= form.text_field :event_name, :class=>'form-control',:required => true %>
  </div>

  <div class="field">
    <%= form.label :event_type, :class=>'form-label' %>
    <%= form.select :'event_type', ["Consultancy","Blood Test","X-Ray","MRI","CT Scan"], {}, {class: "form-control"}%>
  </div>

  <div class="field">
    <%= form.label :'Summary/ Results', :class=>'form-label' %>
    <%= form.text_area :summary, :class=>'form-control',:rows=>5,:required => true %>
  </div>

  <div class="actions">
    <%= form.submit :'Save',:class=>'btn btn-primary' %>
  </div>
<% end %>

</div>
</div>