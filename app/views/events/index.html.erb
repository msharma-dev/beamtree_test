<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= link_to 'New Event', new_event_path,:class=>'float-end' %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Code</th>
      <th>First name</th>
      <th>Last name</th>
      <th>DOB</th>
      <th>Event name</th>
      <th>Event type</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @events.length>0%>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.code %></td>
        <td><%= event.first_name %></td>
        <td><%= event.last_name %></td>
        <td><%= event.dob %></td>
        <td><%= event.event_name %></td>
        <td><%= event.event_type %></td>
        <td><%= event.summary %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
      </tr>
    <% end %>
    <%else %>
    <tr>
        <td colspan="8">No records</td>
      </tr>
    <% end %>
  </tbody>
</table>
