<p id="notice"><%= notice %></p>

<h1>People</h1>
<%= link_to 'New Person', new_person_path,:class=>'float-end' %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @people.length>0%>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.dob %></td>
        <td><%= person.email %></td>
        <td><%= person.address %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
      </tr>
    <% end %>
    <%else %>
    <tr>
        <td colspan="7">No records</td>
      </tr>
    <% end %>
  </tbody>
</table>