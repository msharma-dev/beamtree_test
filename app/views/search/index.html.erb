<p id="notice"><%= notice %></p>
<h1>Search</h1>
<div class="row">
  <div class="col-md-12">
  <%= form_with local:true do |form| %>
  <div class="row">
    <div class="col-md-4">
      <div class="mb-3">
        <%= form.label :'', :class=>'form-label' %>
        <%= form.text_field :searchtext, :class=>'form-control',:placeholder=>'Search',:required => true,:value=>@searchtext %>
      </div>
    </div>
  <div class="col-md-2">
    <div class="mb-3">
    <br>
      <%= form.submit :'Search',:class=>'btn btn-primary' %>
    </div>
  </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>Code</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Dob</th>
            <th>email</th>
            <th>Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% if @people.length>0%>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.code %></td>
              <td><%= person.first_name %></td>
              <td><%= person.last_name %></td>
              <td><%= person.dob %></td>
              <td><%= person.email %></td>
              <td><%= person.address %></td>
              <td><%= link_to 'Show', person %></td>
              <td><%= link_to 'Edit', edit_person_path(person) %></td>
            </tr>
          <% end %>
          <%else %>
          <tr>
              <td colspan="7">No records</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>